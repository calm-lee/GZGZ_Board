<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.DAO.PostDAO">
 	<select id="selectPostListByUserId" parameterType="int" resultType="com.memo.post.Post.Post">
 	
 		SELECT
 			`id`
			,`userId`
			,`userName`
			,`subject`
			,`content`
			,`imgPath`
			,`createdAt`
			,`updatedAt`
 		FROM 
 			`post`
 		WHERE
 			`userId` = #{userId}
 			
 	</select>	
 
 	<insert id="insertPost" parameterType="map">
 		
 		INSERT INTO `post`
 		(
 			`userId`
			,`subject`
			,`content`
			,`imgPath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			,#{subject}
 			,#{content}
 			,#{imgPath}
 			,now()
 			,now()
 		)
 		
 	</insert>
 	
 	<select id="selectPostByPostIdAndUserId" parameterType="map" resultType="com.memo.post.Post.Post">
	 	 SELECT
	 			`id`
				,`userId`
				,`subject`
				,`content`
				,`imgPath`
				,`createdAt`
				,`updatedAt`
	 	FROM
	 		`post`
	 	WHERE
	 		`id` = #{postId}
	 		AND `userId` = #{userId}
 
 	</select>
 	
 	<update id="updatePost" parameterType="map">
	 	UPDATE `post`
	 	SET
	 		`subject` = #{subject}
	 		, `content` = #{content}
	 		, `updatedAt` = now()
	 		<!-- imgPath가 null이 아닐 때만 수정 가능 -->
	 		<if test="imgPath != null">
	 		, `imgPath` = #{imgPath}
	 		</if>
	 	WHERE
	 		`id` = #{postId} <!-- PK이기 때문에 -->
	 		AND `userId` = #{userId}
 	</update>
 	
 </mapper>