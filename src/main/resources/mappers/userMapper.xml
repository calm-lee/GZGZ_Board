<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.memo.user.DAO.UserDAO">
	
	<select id="selectUserByLoginId" parameterType="String" resultType="com.memo.user.User.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`	
		WHERE
			`loginId` = #{"loginId"}
	</select>
	
	<insert id="insertUser" parameterType="map">
	
		INSERT INTO `user`
		(
			`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			,#{password}
			,#{name}
			,#{email}
			,now()
			,now()
		);
	
	</insert>
	
	<select id="selectByLoginIdAndPassword" parameterType="Map" resultType="com.memo.user.User.User">
		SELECT
			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`	
		WHERE
			`loginId` = #{loginId} and
			`password` = #{password};		
	</select>
	
</mapper>